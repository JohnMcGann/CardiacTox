    <h1>Karen Calls an Ambulance</h1>
    
    <div id="video-container">
        <iframe id="video-player" src="https://www.youtube.com/embed/lRw4K3bcvcI?autoplay=1&enablejsapi=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>

    <div id="buttons" class="buttons">
        <button onclick="playVideo('https://www.youtube.com/embed/pIowjZlUI3A?autoplay=1')">Is that a dog?</button>
        <button onclick="playVideo('https://www.youtube.com/embed/x1g3l29XhqI?autoplay=1')">Get some history</button>
    </div>

    <script>
        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('video-player', {
                events: {
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        function onPlayerStateChange(event) {
            if (event.data === 0) { // Video ended
                document.getElementById('buttons').style.display = "block";
            }
        }

        function playVideo(videoUrl) {
            document.getElementById('buttons').style.display = "none";
            document.getElementById('video-player').src = videoUrl;
        }
    </script>

    <script src="https://www.youtube.com/iframe_api"></script>

